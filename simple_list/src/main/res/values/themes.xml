<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidFeaturesLibrary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="List" parent="Theme.AndroidFeaturesLibrary" />

    <style name="List.Item" parent="List" />

    <style name="List.Item.Simple" parent="List.Item">

    </style>

    <style name="List.Item.Simple.Title" parent="List.Item.Simple">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="List.Item.Simple.SubTitle" parent="List.Item.Simple">
        <item name="android:textSize">13sp</item>
    </style>
</resources>