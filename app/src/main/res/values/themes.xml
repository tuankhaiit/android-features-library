<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndroidFeaturesLibrary" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="List" parent="Theme.AndroidFeaturesLibrary" />

    <style name="List.Item" parent="List" />

    <style name="List.Item.Simple" parent="List.Item">

    </style>

    <style name="List.Item.Simple.Header" parent="List.Item.Simple">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="List.Item.Simple.Title" parent="List.Item.Simple">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="List.Item.Simple.BigTitle" parent="List.Item.Simple.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="List.Item.Simple.HugeTitle" parent="List.Item.Simple.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="List.Item.Simple.SubTitle" parent="List.Item.Simple">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="List.Item.Simple.Body" parent="List.Item.Simple">
        <item name="android:textSize">14sp</item>
    </style>
</resources>